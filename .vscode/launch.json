{
  "version": "0.2.0",
  "configurations": [
    {
      "args": ["/mnt/c/media/Ableton/Projects/fu Project/fu.als"],
      "debugPort": "0",
      "name": "Debug live_set with rdbg",
      "script": "lib/live_set.rb",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "args": [],
      "debugPort": "0",
      "name": "Debug current file with rdbg",
      "script": "${file}",
      "request": "launch",
      "type": "rdbg",
      "useBundler": true,
    },
    {
      "name": "Run selected Ruby file with ruby_lsp",
      "program": "ruby ${file}",
      "request": "launch",
      "type": "ruby_lsp"
    },
    {
      "debugPort": "0",
      "name": "Attach with rdbg",
      "request": "attach",
      "type": "rdbg",
    },
    {
      "name": "Attach with ruby_lsp",
      "request": "attach",
      "type": "ruby_lsp",
    },
    {
      "name": "RSpec - active spec file only",
      "program": "binstub/rspec -I ${workspaceRoot} ${file}",
      "request": "launch",
      "type": "ruby_lsp",
    },
    {
      "name": "RSpec - all",
      "program": "${workspaceRoot}/binstub/rspec -I ${workspaceRoot}",
      "request": "launch",
      "type": "ruby_lsp",
    }
  ]
}
